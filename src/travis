#!/bin/bash

set -e

die()
{
    echo $@
    exit 1
}

get()
{
    key=$1

    cat .travis.yml | shyaml get-values $key 2> /dev/null
    if [ $? != 0 ]
    then
        cat .travis.yml | shyaml get-value $key 2> /dev/null
    fi
}

execute_command()
{
    command="$1"

    eval $command
    status=$?

    if [ $status == 0 ]
    then
        echo -en "\e[32m\e[1mâœ“\e[0m"
    else
        echo -en "\e[31m\e[1mx\e[0m"
    fi

    echo " $command"

    if [ $status != 0 ]
    then
        return $status
    else
        echo ""
    fi
}

execute()
{
    commands=$(get "$1")

    if [ $? != 0 ]
    then
        return 0
    fi

    IFS=$'\n'
    for command in $commands
    do
        if [ "$1" == "services" ]
        then
            command="sudo rc-service $command start"
        fi

        execute_command "$command"

        if [ $? != 0 ]
        then
            return $status
        fi
    done
}

test -e .travis.yml || die 'No .travis.yml script'

execute "services" \
    && execute "before_install" \
    && execute "install" \
    && execute "before_script" \
    && execute "script" \
    && execute "after_success" \
    && execute "before_deploy" \
    && execute "deploy" \
    && execute "after_deploy" \
    && execute "after_script" \
    || execute "after_failure"
